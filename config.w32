// vim:ft=javascript

ARG_ENABLE("sass", "whether to enable sass extension", "yes");

if (PHP_SASS == "yes") {
	CHECK_LIB("sass", lib/libexec, LIBSASS_SHARED_LIBADD);
	LDFLAGS="-lsass -L"`pwd`"/lib/libsass/lib/ -lstdc++";
	EXTENSION("sass", "src/sass.c src/utilities.c");

	if ("x$sass_version" != "x") {
		CFLAGS="-DLIBSASS_VERSION=\"\\\"$sass_version\\\"\" $CFLAGS";
		CXXFLAGS="-DLIBSASS_VERSION=\"\\\"$sass_version\\\"\" $CXXFLAGS";
	}
}